<div class="container">
<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
<div class="card">
<h2 class="card-title"><%= bookmark.movie.title %></h2>
<div class="card-body">
<%= bookmark.comment %>
<%= link_to "Delete",  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
</div>
<% end %>
</div>
<%= link_to "Add Bookmark",  new_list_bookmark_path(@list), class: "btn btn-primary"%>
<%= link_to "Back",  lists_path, class: "btn btn-success" %>
</div>
